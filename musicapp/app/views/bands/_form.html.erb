<% if action == :edit %>
  <% action_url = band_url(band) %>
<% else %>
  <% action_url = bands_url %>
<% end %>


<form action=  '<%= action_url %>' method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="name">Name</label>
  <input id="name" type="text" name="band[name]" value="<%= band.name %>">

  <input type="submit" value= "<%= action == :edit ? 'Edit Band' : 'Add Band'%>">

</form>
